<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Atestat">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="WhiteBrush"         Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="LightBlueBrush"     Color="{StaticResource LightBlue}"/>
    <SolidColorBrush x:Key="DarkBlueBrush"      Color="{StaticResource DarkBlue}"/>
    <SolidColorBrush x:Key="DarkGreenBrush"     Color="{StaticResource DarkGreen}"/>
    <SolidColorBrush x:Key="BlackBrush"         Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="RedkBrush"          Color="{StaticResource Red}"/>
    

</ResourceDictionary>